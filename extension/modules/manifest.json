{
    "manifest_version": 3,
    "name": "Chess Analysis Overlay",
    "version":  "1.0.0",
    "description": "Real-time Stockfish analysis with MultiPV support",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://www.chess.com/*",
        "https://lichess.org/*",
        "http://localhost:8000/*"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128":  "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.chess.com/*",
                "https://lichess.org/*"
            ],
            "js":  [
                "modules/engine-client.js",
                "modules/board-handler.js",
                "modules/mutation-observer.js",
                "modules/overlay-ui.js",
                "content.js"
            ],
            "css": ["styles/overlay.css"],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48":  "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
